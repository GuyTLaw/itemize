{
    "compilerOptions": {
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2015",
        "strictPropertyInitialization": false, // class member need initialization and or constructor
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "types": [ "node" ]
    },
    "include": [
        "src"
    ]
}